generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model student {
  id               String   @id @default(cuid())
  firstName        String
  lastName         String
  email            String   @unique
  degree           String
  phone            String
  currentCourses   String[]
  completedCourses String[]
  dob              String

  @@map("students")
}

model course {
  id             String @id @default(cuid())
  name           String
  instructorName String

  @@map("courses")
}
